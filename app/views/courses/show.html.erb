<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <%= link_to "&larr; Back to courses".html_safe, courses_path %>
      <h1><%= @course.name %></h1>

      <div class="text-right">

      </div>

      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Temas</h3>
        </div>

        <div class="table">
          <tbody>
            <% @course.subjects.each do |subject| %>
              <tr>
                <td><%= subject.name %></td>
              </tr>
            <% end %>
          </tbody>
        </div>
      </div>
    </div>
  </div>
</div>
